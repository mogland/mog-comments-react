{
  "name": "@nx-space/nx-comments-react",
  "version": "0.0.1-alpha.0",
  "description": "为使用 React 的前端打造的评论区组件",
  "author": "wibus <wibus@qq.com>",
  "license": "AGPLv3",
  "homepage": "https://github.com/nx-space/nx-comments-react#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nx-space/nx-comments-react.git"
  },
  "issues": "https://github.com/nx-space/nx-comments-react/issues",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache --fix"
    ]
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepublishOnly": "pnpm build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@innei-util/eslint-config-ts": "0.8.2",
    "@innei-util/prettier": "0.8.2",
    "@innei/eslint-config-ts": "0.9.5",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.8",
    "autoprefixer": "10.4.13",
    "bumpp": "8.2.1",
    "eslint": "8.27.0",
    "esno": "0.16.3",
    "husky": "8.0.2",
    "lint-staged": "13.0.3",
    "pnpm": "7.13.6",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "typescript": "4.8.4",
    "unbuild": "0.8.9",
    "vite": "3.1.8",
    "vitest": "0.24.5"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "postcss": "^8.4.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-message-popup": "1.0.0",
    "react-use": "^17.4.0"
  }
}